---
import "../assets/colors.css";
import Navigator from "../components/Navigator.astro";
import { AUTHOR_NAME } from "../constant";

interface Props {
    disablePadding?: boolean;
    disableMargin?: boolean;
}

const { disablePadding = false, disableMargin = false } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <!-- For Internet Explorer 9 and older -->
        <!--[if lt IE 9]>
            <script src='https://unpkg.com/flex-native@latest'></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
        <![endif]-->
        <script
            defer
            src="https://cloud.umami.is/script.js"
            data-website-id="32517f0f-d824-4a46-8eed-c7948403e966"></script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{`${AUTHOR_NAME}'s Site`}</title>
    </head>
    <body>
        <Navigator
            disablePadding={disablePadding}
            disableMargin={disableMargin}
        >
            <slot />
        </Navigator>
    </body>
</html>
<style is:global lang="scss">
    :root {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    html,body {
        margin-inline: 3pt
    }
</style>